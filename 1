# frontend-deployment.yaml
# VERSIÓN CORREGIDA: Configuración de Nginx mejorada para manejar la subcarpeta /invopay

apiVersion: v1
kind: ConfigMap
metadata:
  name: frontend-nginx-conf
data:
  default.conf: |
    server {
      listen 80;
      server_name localhost;

      # La raíz donde se encuentran los archivos de Angular (index.html, etc.)
      root /usr/share/nginx/html;

      # --- BLOQUE MEJORADO ---
      # Esta sección maneja todas las peticiones que empiezan con /invopay/
      location /invopay/ {
        # Esta es la directiva clave para las Single Page Applications.
        # Siempre devuelve el archivo index.html para que el router de Angular
        # pueda manejar la ruta internamente.
        try_files $uri $uri/ /index.html;
      }

      # Esta sección maneja las peticiones a la API y las redirige al backend.
      location /api/ {
        proxy_pass http://backend-service:8080/api/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      }

      # (Opcional) Redirige la raíz a la página de login de admin por defecto.
      location = / {
        return 301 /invopay/login-admin;
      }
    }
---
# Deployment para el Frontend
apiVersion: apps/v1
kind: Deployment
metadata:
  name: frontend-deployment
  labels:
    app: frontend
spec:
  replicas: 1
  selector:
    matchLabels:
      app: frontend
  template:
    metadata:
      labels:
        app: frontend
    spec:
      containers:
      - name: frontend-container
        image: kennysolo/invopay-frontend:1.0.0
        imagePullPolicy: Always
        ports:
        - containerPort: 80
        volumeMounts:
        - name: nginx-config-volume
          mountPath: /etc/nginx/conf.d/default.conf
          subPath: default.conf
      volumes:
      - name: nginx-config-volume
        configMap:
          name: frontend-nginx-conf
---
# Service para el Frontend
apiVersion: v1
kind: Service
metadata:
  name: frontend-service
spec:
  type: NodePort
  selector:
    app: frontend
  ports:
  - protocol: TCP
    port: 80
    targetPort: 80
    nodePort: 8081

