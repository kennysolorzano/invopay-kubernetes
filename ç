# frontend-deployment.yaml
# Contenido completo y verificado para el despliegue del frontend.

apiVersion: v1
kind: ConfigMap
metadata:
  name: frontend-nginx-conf
data:
  default.conf: |
    server {
      listen 80;
      server_name localhost;
      root /usr/share/nginx/html;
      
      # Regla para redirigir peticiones a la API hacia el backend
      location /api/ {
        proxy_pass http://backend-service:8080/api/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
      }

      # Regla para aplicaciones de una sola página (SPA) como Angular
      # Siempre sirve el index.html para que el router de Angular maneje la ruta.
      location / {
        try_files $uri $uri/ /index.html;
      }
    }
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: frontend-deployment
  labels:
    app: frontend
spec:
  replicas: 1
  selector:
    matchLabels:
      app: frontend
  template:
    metadata:
      labels:
        app: frontend
    spec:
      containers:
      - name: frontend-container
        # Apunta a tu imagen pública en Docker Hub
        image: kennysolo/invopay-frontend:1.0.0
        # Asegura que siempre se descargue la imagen del registro
        imagePullPolicy: Always
        ports:
        - containerPort: 80
        volumeMounts:
        - name: nginx-config-volume
          mountPath: /etc/nginx/conf.d/default.conf
          subPath: default.conf
      volumes:
      - name: nginx-config-volume
        configMap:
          name: frontend-nginx-conf
---
apiVersion: v1
kind: Service
metadata:
  name: frontend-service
spec:
  # LoadBalancer es para exponer el servicio a internet en un clúster de nube
  type: LoadBalancer
  selector:
    app: frontend
  ports:
  - protocol: TCP
    port: 80
    targetPort: 80
